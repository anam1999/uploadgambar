<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PenukaranHadiah">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivHadiah"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/tvNamaHadiah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/ivHadiah"
                    android:text="Nama Hadiah"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/poinsaya"
                    android:onClick="nambah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/tvNamaHadiah"
                    android:text="Poin Saya:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
a
                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNamaHadiah"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ivHadiah"
                    android:text="Deskripsi"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <Button
                    android:id="@+id/kurang"
                    android:onClick="kurang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDeskripsi"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ivHadiah"
                    android:text="-"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                <TextView
                    android:id="@+id/nilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDeskripsi"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:layout_toRightOf="@id/kurang"
                    android:text="0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                <Button
                    android:id="@+id/tambahi"
                    android:onClick="nambah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDeskripsi"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/nilai"
                    android:text="+"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/TotalPoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kurang"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ivHadiah"
                    android:text="Total Point:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


                <Button
                    android:id="@+id/tukarkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TotalPoin"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ivHadiah"
                    android:text="Tukarkan"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kurang"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/TotalPoin"
                    android:text="status:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/jumlahdanharga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TotalPoin"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/tukarkan"
                    android:text="Total Jumlah:"

                  />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>